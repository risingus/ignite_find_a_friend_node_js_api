generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id            String @id @default(uuid())
  name          String
  author_name   String
  email         String @unique
  whatsapp      String
  password_hash String

  cep          String
  state        String
  city         String
  neighborhood String
  street       String

  latitude  String
  longitude String

  pets Pet[]

  @@map("orgs")
}


model Pet {
  id String @id @default(uuid())
  name String
  about String
  age String
  size String
  energy_level String
  enviroment String

  org Org @relation(fields: [org_id], references: [id])
  org_id String

  @@map("pets")
}